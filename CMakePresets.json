{
    "version": 6,
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config with Ninja",
            "description": "Default build configuration using Ninja",
            "generator": "Ninja",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Config with Ninja",
            "description": "Debug build configuration using Ninja",
            "generator": "Ninja",
            "binaryDir": "build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "conan-release",
            "displayName": "Conan Release Config",
            "description": "Release build with Conan dependencies",
            "generator": "Ninja",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_TOOLCHAIN_FILE": "build/Release/generators/conan_toolchain.cmake"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release Config",
            "description": "Release build for Linux systems",
            "generator": "Ninja",
            "binaryDir": "build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "displayName": "Default Build",
            "configurePreset": "default",
            "configuration": "Release",
            "jobs": 0
        },
        {
            "name": "debug",
            "displayName": "Debug Build", 
            "configurePreset": "debug",
            "configuration": "Debug",
            "jobs": 0
        },
        {
            "name": "conan-release",
            "displayName": "Conan Release Build",
            "configurePreset": "conan-release",
            "configuration": "Release",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "displayName": "Default Tests",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Tests",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "conan-release",
            "displayName": "Conan Release Tests",
            "configurePreset": "conan-release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
