{
    "version": 6,
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Development Build",
            "description": "Development build with all sanitizers, static analysis, and debugging enabled",
            "generator": "Ninja",
            "binaryDir": "build-dev",
            "toolchainFile": "build/Debug/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_CLANG_TIDY": "ON",
                "ENABLE_ASAN": "ON",
                "ENABLE_UBSAN": "ON",
                "ENABLE_TSAN": "OFF",
                "ENABLE_MSAN": "OFF",
                "ENABLE_ALL_SANITIZERS": "OFF"
            }
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "description": "Optimized release build for production use",
            "generator": "Ninja",
            "binaryDir": "build-release",
            "toolchainFile": "build/Release/generators/conan_toolchain.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "ENABLE_CLANG_TIDY": "OFF",
                "ENABLE_ASAN": "OFF",
                "ENABLE_UBSAN": "OFF",
                "ENABLE_TSAN": "OFF",
                "ENABLE_MSAN": "OFF",
                "ENABLE_ALL_SANITIZERS": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "displayName": "Development Build",
            "configurePreset": "dev",
            "configuration": "Debug",
            "jobs": 0
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "configurePreset": "release",
            "configuration": "Release",
            "jobs": 0
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "displayName": "Development Tests",
            "configurePreset": "dev",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release",
            "displayName": "Release Tests",
            "configurePreset": "release",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
